        <block wx:key="{{headNews.list}}" wx:for="{{headNews.list}}">
          <swiper-item>
            <navigator class='c-666' url="/pages/common/webview/index?src={{item.url}}">{{item.title}}</navigator>
          </swiper-item>
        </block>
      </swiper>
      <navigator class="more">
        <icon class='iconfont icon-you1'></icon>
      </navigator>
    </view>
  </view>

