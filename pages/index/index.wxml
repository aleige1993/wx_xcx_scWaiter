<view class="dashboard">
  <swiper class='banner' circular indicator-dots="{{banner.indicatorDots}}" autoplay="{{banner.autoplay}}" interval="{{banner.interval}}" duration="{{banner.duration}}">
    <block wx:key="{{banner.imgUrls}}" wx:for="{{banner.imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" style='width: 100%' />
      </swiper-item>
    </block>
  </swiper>

  <view class='header-news'>
    <view>
      <image class='img' src='/static/images/dashboard-headnews.png'></image>
      <swiper class="text" circular vertical autoplay="{{headNews.autoplay}}" interval="{{headNews.interval}}" duration="{{headNews.duration}}">
        <block wx:key="{{headNews.list}}" wx:for="{{headNews.list}}">
          <swiper-item>
            <navigator url="/pages/common/webview/index?src={{item.url}}">{{item.title}}</navigator>
          </swiper-item>
        </block>
      </swiper>
      <navigator class="more">
        <van-icon name="arrow"></van-icon>
      </navigator>
    </view>
  </view>

