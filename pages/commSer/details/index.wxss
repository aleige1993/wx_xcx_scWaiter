/* pages/commSer/details/index.wxss */ 
@import '/pages/commSer/index.wxss';
page{
    background-color: #fff;
}
.detaPanl{
    padding-bottom: 50rpx;
}
.infoImg{
    width: 100%;
    height: 400rpx;
}
.titlInfo{
    width: 94%;
    margin: 20rpx 0 20rpx 3%;
}
.titles{
    width: 100%;
    font-size: 34rpx;
    font-weight: 600;
    color: #535353;
    margin-bottom: 30rpx;
}
.dsfont{
    display: flex;
    align-items: center;
}
.dsfont view{
    margin-right: 30rpx;
}
.shopInfo{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.gzinfo{
    padding: 8rpx 30rpx;
    border-radius:10rpx;
    color: #fff;
    background-color: #FF4949;
    text-align: center;
}
.deFooter{
    margin-top: 40rpx;
}
.ckZan{
    text-align: center;
}
.p_text{
    text-align:center;
    margin: 20rpx 0;
    font-size: 22rpx;
}
.zan{
    font-size: 100rpx;
    color: #FF4949;
}
.fxFiend{
    width: 40%;
    margin-left: 30%;
    border-radius:70rpx;
    line-height: 70rpx;
    color: #fff;
    background-image:linear-gradient(45deg,#FF7475,#FF4949); 
}
.centCont{
    padding: 30rpx;
}
.gdImg{
    width: 160rpx;
    height: 160rpx;
}
.goodinfo{
    display: flex;
    border: 1px solid #f2f2f2;
    border-radius:10rpx; 
    padding: 30rpx;
    box-shadow: 10rpx 10rpx 20rpx #eee;
    margin: 30rpx 0;
}
.goodbox{
    display: flex;
    flex: 1;
    flex-direction: column;
    margin-left: 20rpx;
    justify-content: space-between;
    align-content: space-between;
}
.gdname{
    color: #777;
}
.czgd{
    display: flex;
    justify-content: space-between;
    align-content: flex-end;
    align-items: flex-end;
}
.pay{
    padding: 6rpx 20rpx;
    background-color: #FF4949;
    color: #fff;
    border-radius:40rpx; 
    height: 48rpx
}
.priceall{
    display: flex;
    flex-direction: column;
}
.priceall label{
    font-size: 22rpx;
}
.vipprice{
    padding: 4rpx 20rpx;
    border-radius:20rpx;
    color: #fff;
    background-color:#FF4949;
    margin-top: 10rpx;
}
.price{
    margin-left: 20rpx;
}
.ygzinfo{
    background-color: #ccc !important;
}
.backHome{
    color: #fff;
    background-color: #535353;
    opacity: 0.7;
    width: 80rpx;
    height: 80rpx;
    border-radius:80rpx;
    text-align: center;
    line-height: 80rpx; 
    position: fixed;
    z-index: 3;
    right: 20rpx;
    top: 2%;
    font-size: 24rpx;
}