<!--pages/schoolCar/index.wxml-->
<view>
    <view class='banner'>
        <image src='../../static/images/error.png'></image>
    </view>
    <form  bindsubmit="formSubmit" >
        <view class='schoolInfo'>
            <view class='Info_panl'>
                <view class='panl_title'>
                    学习信息选择
                </view>
                <view class='cell_box'>
                    <view class='label'>小站选择</view>
                    <view class='value'>
                          <picker bindchange="shoprChange"  value="{{shopIndex}}" range="{{shopArr}}" range-key="stationName">
                            <view class="picker">
                                {{shopArr[shopIndex].stationName ? shopArr[shopIndex].stationName : '请选择小站'}}
                            <icon class='iconfont icon-you1'></icon>
                            </view>
                        </picker>
                    </view>
                </view>
                  <view class='cell_box'>
                    <view class='label'>车型学习</view>
                    <view class='value'>
                          <picker bindchange="carChange" value="{{carIndex}}" range="{{carArr}}" range-key="name">
                            <view class="picker">
                            {{carArr[carIndex].name ? carArr[carIndex].name : '请选择驾驶证类型'}}
                            <icon class='iconfont icon-you1'></icon>
                            </view>
                        </picker>
                    </view>
                </view>

            </view>

             <view class='Info_panl'>
                <view class='panl_title'>
                    学车人基本信息
                </view>
                <view class='cell_box'>
                    <view class='label'>学员姓名</view>
                    <view class='value'>
                            <input value=''  placeholder='请输入姓名' name="username" />
                     </view>
                </view>
                  <view class='cell_box'>
                    <view class='label'>性别</view>
                    <view class='value'>
                          <picker bindchange="sexChange" value="{{sexIndex}}" range="{{sexArr}}" range-key="name">
                            <view class="picker">
                            {{sexArr[sexIndex].name ? sexArr[sexIndex].name : '请选择性别'}}
                            <icon class='iconfont icon-you1'></icon>
                            </view>
                        </picker>
                    </view>
                </view>
                <view class='cell_box'>
                    <view class='label'>身份证号</view>
                    <view class='value'>
                            <input value=''  placeholder='请输入学车人的身份证号' name="idcard" />
                     </view>
                </view>
                <view class='cell_box'>
                    <view class='label'>手机号</view>
                    <view class='value'>
                            <input value=''  placeholder='请输入学车人的手机号'  name="mobile" />
                     </view>
                </view>
            </view>

             <view class='chebox_box'>
                <van-checkbox  checked-color="#5f8aff"  value="{{ checked }}" bind:change="onChange"></van-checkbox>
                <view class='agre_box'>同意《<navigator class='c-blue'>用户服务协议</navigator>》</view>
            </view>
             <view class='marig-primary'>
                <button size="normal" type="primary" round="ture"  form-type='submit' class="primary backg-grad" >报名</button>
            </view>
    </view>
    </form>
    
</view>

<van-action-sheet show="{{ sheetShow }}" title="报名信息" overlay="ture"  bind:close="onClose">
 <van-cell-group>
  <van-cell
    title="小站地址"
    value="{{repeatItem.stationName}}"
  />
  <van-cell
    title="学员姓名"
    value="{{repeatItem.userName}}"
  />
  <van-cell
    title="车型学习"
    value="{{repeatItem.type}}"
  />
   <van-cell
    title="性别"
    value="{{repeatItem.gender == '1' ? '男' : '女'}}"
  />
  <van-cell
    title="身份证"
    value="{{repeatItem.card ? repeatItem.card : '未填写'}}"
  />
  <van-cell
    title="手机号"
    value="{{repeatItem.mobile}}"
  />
</van-cell-group>
</van-action-sheet>


