/* pages/shopMall/orderList/index.wxss */
@import '/pages/shopMall/index.wxss';
@import '/pages/usCenter/couponInfo/index.wxss';

page{
    background-color: #f2f2f2;
     margin-bottom: 140rpx;
}
.menber-tabs{
display: flex;
margin: 20rpx;
 border: 1px solid #3984FF;
 border-radius:8rpx;
 overflow: hidden;  
}
.ind_tab{
    width: 50%;
    display: flex;
    padding: 10rpx;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;
    background-color: #F5F5F5;
    color: #434343;
    /* border: 1px solid #3984FF; 
    border-top-left-radius:40rpx; 
    border-top-right-radius:40rpx;  */

}
.ind_tab view:first-child{
    font-weight: 600;
    font-size: 28rpx;
}
.menber-tabs .ind_tab.active{
    transition: 0.3s;
    background-color: #3984FF;
    color: #fff !important;
}
.menber-tabs .ind_tab.active view{
     color: #fff !important;
}
.addrDetail{
    background-color: #fff;
    display: flex;
    flex-direction: column;
   
}
.addrInfo,.timeInfo{
    display: flex;
    justify-content: space-between;
    align-items: center;
     padding: 20rpx;
}
.addrInfo view{
    margin-bottom: 20rpx;
}
.timeInfo  view{
    display: flex;
}
.icon-you1{
    margin-top: 4rpx;
}
.shopStore{
    margin-top: 20rpx;
    background-color: #fff;
    padding: 20rpx;
}
.shopData{
    display: flex;
    justify-content: space-between;
}
.shoname,.phoneha{
    color: #666;
}
.icon-gantanhao-yuankuang{
    color: #FF3939;
    margin-right: 20rpx;
}
.shoname icon{
    color: #FF3939;
}
.phoneha icon{
    color: #FFC939;
}
.goodlist{
    background-color: #fff;
}
.goods{
    display: flex;
    padding: 20rpx 0;
}
.goods .good_left{
    display: flex;
    flex: 1;
    justify-items: center;
    align-content: center;
    align-items: center;
}
.goods .good_left image{
        width: 140rpx;
        height: 140rpx;
        margin-right: 20rpx;
}
.good_right{
    display: flex;
    align-items: flex-end;
    font-size: 18px;
}
.phoneha{
    border: 1px solid #E5E5E5;
    padding: 0 20rpx;
    border-radius:40rpx; 
    line-height: 60rpx;
}
.phoneha icon{
    height: 30rpx;
}
.shangpin{
    margin-top: 20rpx;
    background-color: #fff;
}
.shangpin .li{
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    color: #434343;
}
.orderPage{
    padding-bottom: 140rpx;
}
.menberPire{
    margin-right: 20rpx;
}
.bottom_view{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    line-height: 100rpx;
    color: #434343;
    z-index: 2;
}
.bottom_view .prie{
    width: 70%;
    padding-left: 20rpx;
}
.bottom_view .prie text{
    font-size: 20px;
    font-weight: 600;
}
.one_but{
    width: 30%;
    background-color: #3984FF;
    color: #fff;
    font-size:16px;
    text-align: center;
    border-radius:0;
    line-height:100rpx; 
}
.leftInfo{
    flex: 1;
}
.van-tree-select{
    height: 300px !important;
}
.van-tree-select__content{
    height: 300px !important;
}
.flex_Name{
    display: flex;
}
.conpun_model{
    position: fixed;
    z-index: 12;
    width: 100%;
    height: 70%;
    background-color: #f2f2f2;
    bottom: 0;
    left: 0;
    overflow-y: scroll;
}
.bottom_model{
    position: absolute;
    bottom: 30rpx;
    width: 60%;
    left: 20%;
    line-height: 80rpx;
    text-align: center;
    border: 1px solid #eee;
    color: #434343;
    border-radius:6rpx; 
    background-color: #fff;
    z-index: 13;
}
.icon-chenggong{
    color: #FF3939 !important;
    font-size: 50rpx
}