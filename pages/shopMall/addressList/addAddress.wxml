<!--pages/shopMall/addressList/addAddress.wxml-->
<view class='addAddress'>
    <form bindsubmit="formSubmit">
            <van-cell-group>
                <van-field
                    v value="{{formInfo.addName}}"
                    label="姓名"
                    placeholder="输入收货人姓名"
                    name='addName'
                />
                <van-field
                    value="{{formInfo.addIpone}}"
                    label="手机号码"
                    placeholder="输入手机号码"
                    name='addIpone'
                />
                <van-field
                    value="{{formInfo.addAddress}}"
                    label="所在区域"
                    placeholder="选择所在省份/城市/区县"
                     icon="arrow"
                     bind:click-icon="openAddress"
                      name='addAddress'
                      disabled="{{true}}"
                />
                <van-field
                    value="{{formInfo.addDetails}}"
                    label="详细地址"
                    placeholder="输入街道/楼牌号等详细地址"
                    name='addDetails'
                />
                </van-cell-group>
            <view class='marig-primary'>
                <button  class="primary  backg-grad shadow-just newButton"  form-type='submit' size="normal" >保  存</button>
            </view>
    </form>
</view>
