page{
    background-color: #f2f2f2;
}
.swiper_panl{
    background-color: #fff;
}
.swiper_panl swiper{
    width: 100%;
    height: 400rpx;
}
.swiper_panl image{
    width: 100%;
    height: 100%;
}

.goodDeta{
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    margin-bottom: 20rpx;
}
.detaleft{
    flex: 1;
}
.addCat{
    background-color: #FFC939;
    padding: 6rpx 10rpx;
