.notice_panl{
    display: flex;
    background-color: #fff;
    color:#3984FF;
    padding: 20rpx 30rpx;
    /* margin-top: 20rpx; */
}
.notice_panl icon{
    font-size: 28rpx;
    margin-top: -16rpx;
    margin-right: 10rpx;
}
.shopDeta{
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    padding: 20rpx 30rpx;
}

.addres icon{
    color: #FF3939;
}
.addres{
    color: #434343;
}
.lianxishop{
    border: 1px solid #434343;
    color: #434343;
    padding: 6rpx 10rpx;
    border-radius:40rpx; 
}
.lianxishop icon{
    color: #FFC939;
    margin-top: -20rpx;
}
.noData{
    text-align: center;
    margin: 50rpx 0;
    color: #777;
}
.goodDetalis{
    background-color: #fff;
    padding:70rpx 30rpx 30rpx 30rpx;
    min-height:20vh;
    position: relative;
    margin-bottom: 120rpx;
    margin-top: 20rpx;
}
.tig_text{
    position: absolute;
    top: 0;
    left: 42%;
    background-color: #3984FF;
    color: #fff;
