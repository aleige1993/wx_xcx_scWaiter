/* pages/shopMall/orderDetails/details.wxss */
@import '/pages/shopMall/orderList/index.wxss';
@import '/pages/laundryOrder/orderDetails/details.wxss';
.goodDeta{
    display: flex;
    flex: 1;
    margin-left: 20rpx;
    height: 140rpx;
    flex-direction: column;
    justify-content: space-around;
    align-content: space-around;
}
.goodDeta view{
    margin-top: 10rpx;
}
.detahader{
    color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    align-content: center;
    align-items: center;
    background-image: linear-gradient(45deg,#FF7475,#FF4949);
}
.bg-yller{
    background-color: #FFC939;
}
.bg-blue{
    background-color: #3984FF;
}
.bg-gray{
     background-color: #DCDCDC;
}
.bg-red{
    background-color: #ea857d;
}

.detahader view{
    display: flex;
    align-items: center;
}
.detahader view icon{
    margin-top: -6rpx;
    margin-right: 10rpx;
    font-size: 42rpx;
}
.waymode{
    padding: 20rpx;
    background-color: #fff;
}
.ad_info{
    display: flex;
    padding: 20rpx 0;
}
.c-danl{
    color: #BCD5FF;
}
.ad_shop{
    display: flex;
    color: #434343;
    align-items: center;
}
.ad_shop icon{
    margin-right: 10rpx;
}
.orderInfo{
    padding: 20rpx;
    background-color: #fff;
    color: #434343;
    margin-top: 20rpx;
    width: 94%;
    margin-left: 3%;
}
.h2{
    display: flex;
    align-items: center;
    font-size: 30rpx;
    margin: 20rpx 0; 
}
.infogood,infoorder{
  margin:40rpx 0;
}
.infogood .li,.infoorder .li{
    display: flex;
    margin: 10rpx 0;
    align-content: center;
    align-items: center;
}
.infogood .li view:first-child{
width: 200rpx;
font-size: 26rpx;
color: #AAAAAA;
}
.infogood .li view:last-child{
color: #AAAAAA;
}

.infoorder .li view:first-child{
width: 200rpx;
color: #AAAAAA; 
font-size: 26rpx;
}
.infoorder .li view:last-child{
color: #AAAAAA;
} 
.main-center{
    margin-bottom: 120rpx;
}
.takeDeliv{
    text-align: center;
    margin: 40rpx 0;
}
.takeDeliv image{
    width: 360rpx;
    height: 200rpx;
}
.takeDeliv .maigTop{
    margin-top:20rpx;
}
.good_right{
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.good_right .apply{
    border-radius:30rpx;
    border: 1px solid #FF3939;
    padding:6rpx 20rpx; 
    color: #434343;
    margin-top: 30rpx;
}
.good_right  view.active{
    background-color: #FF3939;
    color: #fff;
    border: 1px solid #FF3939;
}
.good_right  view.refuse{
    color: #FF3939;
}
.doubel{
    display: flex;
    flex-direction: column;
    align-content: flex-start;
}
.detaText{
    font-size: 22rpx;
}
.ic_add{
    width: 70rpx;
    height: 70rpx;
    margin-right: 10rpx;
}
.leborder{
    width: 8rpx;
    height: 30rpx;
    background-color: #FF4949;
    margin-right: 10rpx;
}
.refundRef{
   border:1px solid #2ECD90 !important;
   color: #2ECD90 !important;
}