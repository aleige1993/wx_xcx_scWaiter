<!--pages/login/register.wxml-->
<view>
    <view class='logo_box'>
         <image class='logo' src='../../static/images/logo.png'></image>
    </view>
    <view class='reg_panl'>
         <van-cell-group>
            <van-field
                value="{{ username }}"
                clearable
                placeholder="请输入手机号"
              />
              <van-field
                value="{{ sms }}"
                center
                clearable
                placeholder="请输入短信验证码"
                border="{{ false }}"
                use-button-slot
              >
                <van-button slot="button" size="small" type="primary" >发送验证码</van-button>
              </van-field>
               <van-field
                value="{{ username }}"
                clearable
                 type="password"
                placeholder="请设置6-20位登录密码"
              />
               <van-field
                value="{{ username }}"
                clearable
                 type="password"
                placeholder="请再次输入登录密码"
              />
            </van-cell-group>  
            <view class='chebox_box'>
                <van-checkbox value="{{ checked }}" bind:change="onChange"></van-checkbox>
                <view class='agre_box'>同意《<navigator class='c-blue'>用户服务协议</navigator>》</view>
            </view>
             <view class='marig-primary'>
                <van-button size="normal" type="primary" custom-class="primary backg-grad shadow-just" bind:click="next">注册</van-button>
            </view>
            <view class='newlogin'>
                <navigator class='c-blue'>已有账户，立即登录</navigator>
            </view>
    </view>
</view>
