<view>
    <view class='logo_box'>
        <image class='logo' src='../../static/images/logo.png'></image>
    </view>
    <view class='reg_panl'>
        <form bindsubmit="formSubmit">
            <van-cell-group>
                <van-field value="{{ mobile }}" clearable placeholder="请输入手机号"  name="mobile" data-name="mobile" bind:change="getChange" />
