<!--pages/login/resetPwd.wxml-->

<view>
    <view class='step_panl'>
      <van-steps
        steps="{{ steps }}"
        active="{{ active }}"
        active-color="#3984ff"
      />
    </view>
    
    <view class='steps_view'>
        <view wx:if="{{active == 0}}">
          <view class='step'>
            <van-cell-group>
            <van-field
                value="{{ username }}"
                clearable
                placeholder="请输入手机号"
              />
              <van-field
                value="{{ sms }}"
                center
                clearable
                placeholder="请输入短信验证码"
                border="{{ false }}"
                use-button-slot
              >
                <van-button slot="button" size="small" type="primary">发送验证码</van-button>
              </van-field>
            </van-cell-group>  
          </view>
          <view class='marig-primary'>
            <van-button size="normal" type="primary" custom-class="primary" bind:click="next">下一步</van-button>
          </view>
        </view>
        <view wx:if="{{active == 1}}">
          <view class='step'>
            <van-cell-group>
            <van-field
                value="{{ username }}"
                clearable
                 type="password"
                placeholder="请设置6-20位的新密码"
              />
              <van-field
                value="{{ username }}"
                clearable
                 type="password"
                placeholder="请再次输入密码"
              />
            </van-cell-group>  
          </view>
          <view class='marig-primary'>
            <van-button size="normal" type="primary" custom-class="primary">提交</van-button>
          </view>
        </view>
    </view>
</view>
