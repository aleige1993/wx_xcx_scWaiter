<!--pages/laundryOrder/orderDetails/details.wxml-->
<view class='main'>
    <view class='detaTitle'>
        <view class='title_type backg-grad' wx:if="{{listItme.status==1}}">
            <view class='type_text'>
                <icon class='iconfont icon-shijian'></icon>等待付款
            </view>
            <!-- <view>剩余：59分59秒</view> -->
        </view>
         <view class='title_type backg-grad' wx:if="{{listItme.status==2}}">
            <view class='type_text'>
                <icon class='iconfont icon-tiaobochuku'></icon>等待取衣
            </view>
        </view>
         <view class='title_type backg-grad2 ' wx:if="{{listItme.status==8}}">
            <view class='type_text'>
                <icon class='iconfont icon-wancheng1'></icon>
                    <view>
                        <view>洗衣完成</view>
                        <view>感谢您在颂车小站洗衣，欢迎再次光临</view>
                    </view>
            </view>
        </view>
          <view class='title_type  backg-grad2' wx:if="{{listItme.status==10}}">
            <view class='type_text'>
                <icon class='iconfont icon-warning'></icon>
                    <view>
                        <view>交易关闭</view>
                    </view>
            </view>
        </view>

        <view class='order_panl'>
            <view class='order_title'>
                <view>订单编号：{{listItme.orderNo}}</view>
                <view>
                    <text class='c-red' wx:if="{{listItme.status==1}}">待付款</text>
                </view>
            </view>
            <view class='order_box'>
                <view class='move_box' wx:for="{{listItme.orderGoods}}" wx:key="orderGoods">
                    <image src='{{item.picUrl}}'></image>
                    <view class='order_vim'>
                        <view>{{item.goodName}}</view>
                        <view class='c-red'>￥{{item.price}}</view>
                    </view>
                    <view class='order_num'>×{{item.num}}</view>
                </view>
                <view class='order_price'>
                        <view class='v-li'>
                            <text>订单总价</text>
                            <text>￥{{listItme.totalAmount}}</text>
                        </view>
                        <!-- <view class='v-li'>
                            <text>服务费用</text>
                            <text>￥0.00</text>
                        </view> -->
                        <view class='v-li'>
                            <text>活动优惠</text>
                            <text>￥{{listItme.discounts}}</text>
                        </view>
                </view>
            </view>
        </view>

        <view class='waiter' wx:if="{{listItme.status==1}}">
            <view class='font-w6'>服务小站</view>
            <view>{{listItme.stationAddr}}，{{listItme.stationName}}
                <!-- <icon class='iconfont icon-you1'></icon> -->
            </view>
        </view>
        <view class='waiter' wx:else>
            <view>洗衣地址：{{listItme.stationAddr}}，{{listItme.stationName}}</view>
        </view>

        <view class='ptenm_box'>
            <view class='v-li'  >
                <text>订单编号：</text>
                <text>{{listItme.orderNo}}</text>
            </view>
            <view class='v-li' >
                <text>提交时间：</text>
                <text>{{listItme.modifyTime}}</text>
            </view>
            <view class='v-li' >
                <text>支付方式：</text>
                <text>微信支付</text>
            </view>

             <view class='v-li' wx:if="{{listItme.status==2||listItme.status==8}}">
                <text>实付金额：</text>
                <text>¥{{listItme.paymentAmount}}</text>
            </view>

             <view class='v-li' wx:if="{{listItme.status==2||listItme.status==8}}">
                <text>付款时间：</text>
                <text>{{listItme.payTime}}</text>
            </view>
        </view>

    </view>
</view>
 <view class='footer'>
        <view class='order_footer' wx:if="{{listItme.status==1}}">
            <view class='font-w6'>应付金额：
                <text class='c-red'>¥{{listItme.paymentAmount}}</text>
            </view>
            <view class='but_box'>
                <button class='but_cancel' bindtap='editStatus' data-orderNo="{{listItme.orderNo}}" data-status="10" >取消订单</button>
                <button class='but_payment' bindtap='goOrderPeyMent' data-orderNo="{{listItme.orderNo}}" >立即付款</button>
            </view>
        </view>
          <view class='order_footer' wx:if="{{listItme.status==2}}">
            <view></view>
            <view class='but_box'>
               <button class='but_confirm' bindtap='editStatus' data-orderNo="{{listItme.orderNo}}" data-status="8" >确认取衣</button>
            </view>
        </view>
        <view class='order_footer' wx:if="{{listItme.status==8}}">
            <view></view>
            <view class='but_box'>
                 <button class='but_payment' bindtap='golaundryOrder'>再次洗衣</button>
            </view>
        </view>
        <view class='order_footer' wx:if="{{listItme.status==10}}">
            <view></view>
            <view class='but_box'>
                <button class='but_cancel' data-orderNo="{{listItme.orderNo}}"  bindtap='delOrder'>删除订单</button>
            </view>
        </view>
    </view>
