/* pages/laundryOrder/shoppCart/index.wxss */
page{
    background-color: #f2f2f2;
}
.change_panl{
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
    background-color: #fff;
}
.order_panl{
    display: flex;
    flex: 1;
    margin-left: 30rpx;
}
.order_panl image{
    width:100rpx;
  height:150rpx;
}
.order_panl .order_data{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: space-around;
    margin-left: 20rpx;
}
.stepper_panl{
    margin-top: 80rpx;
}
.sumbit_box{
    display: flex;
    justify-content: space-between;
    /* padding: 0 30rpx; */
    padding-left: 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color:#fff;
}
.sumbit_pirce{
    display: flex;
    align-items: center;
}
.sumbit_but{
    display: flex;
    height: 100rpx;
}
.sumbit_but view{
    width:180rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
}
.sumbit_data{
    margin-left: 10rpx;
}
.y-barg{
    background-color: #ff7b20;
}
.r-barg{
    background-color: #ff4c5e;
}