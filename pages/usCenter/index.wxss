.user_info image.aouter_image{
    width:100rpx;
    height: 100rpx;
    border-radius:6rpx; 
    margin-right: 30rpx;
}
.user_name{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: space-around;
}
.model_info{
    margin-top: 20rpx;
    background-color: #fff;
    border-radius:10rpx; 
}
.heder_info{
    padding: 20rpx;
    /* border-bottom: 1px solid #eee; */
    display: flex;
    justify-content: space-between;
}
.coupon_panl{
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
}
.coupon_panl navigator{
    text-align: center;
}
.coupon_panl navigator view{
    color: #535353;
    font-size: 24rpx;
    margin-top:10rpx; 
}
.coupon_panl navigator image{
    width: 60rpx;
    height: 60rpx;
}
.coupon_panl navigator icon{
    font-size:24px; 
    margin-bottom: 4rpx;
}
.xufei{
    padding: 0rpx 20rpx;
    border:1px solid #ea857d;
    color: #ea857d;
    border-radius:30rpx; 
    margin-left: 20rpx;
}

.shadow-just-bottom{
    box-shadow:0rpx 8rpx 8rpx #e2e2e2;
}
