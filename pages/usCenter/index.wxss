page{
    background-color: #f2f2f2;
}
.bgUser{
    background: linear-gradient(#FF4848,#FF8989);
    position: relative;
    width: 100%;
    height: 12rem;
}
.img_lamp{
    width:10rem;
    height: 10rem;
    margin-left: 100rpx;
}
.bg_img{
    width: 100%;
    height: 260rpx;
}
.info_model{
    position: relative;
}
.flut{
    position: absolute;
    top:10rem;
    width: 92%; 
    z-index: 5;
    left: 4%;
}
.user_info{
    background-color: #fff;
    border-radius:10rpx; 
    display: flex;
    padding: 40rpx;
    position: relative;
    /* overflow: hidden; */
    /* margin-bottom: 40rpx; */
}
.vip_info{
    position: absolute;
    right: 0rpx;
    top: 50rpx;
    z-index: 6;
    display: flex;
    align-items: center;
    background: linear-gradient(45deg,#FF7D36,#FFAD43);
    padding: 14rpx 20rpx;
    border-top-left-radius:30rpx;
    border-bottom-left-radius:30rpx;  
    color: #fff;
}
.ic_vip{
    width: 30rpx;
    height: 26rpx;
    margin-right: 10rpx;
}
/* .vip_info image{
    width: 175rpx;
