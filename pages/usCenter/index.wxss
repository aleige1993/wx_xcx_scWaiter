/* pages/usCenter/index.wxss */
page{
  background-color: #f2f2f2;
}
.us-img-box{
  display: flex;
  margin-bottom:20rpx;
  background-color: #fff;
  padding:60rpx 30rpx;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  position: relative;
}
.us-img-box .box-user image{
  width:150rpx;
  height: 150rpx;
  border-radius:100%; 
}
.us-img-box .box-user{
  display: flex;
}
.us-img-box .icon-you1{
    color: #fff  !important;
}
.vipImg{
    position: absolute;
    right:30rpx;
    bottom: 30rpx;
    width: 80rpx !important;
    height: 80rpx !important;
    z-index: 10;
}
.us-img-box .box-user view{
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
  justify-content: center;
  align-content: center;
}
.glup_box{
  background-color: #fff;
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  padding:20rpx;
  align-items: center;
}
/* .glup_box view:first-child  text{
  margin-left:15rpx;
} */
.glup_box icon{
    margin-top: -10rpx;
}

.getInfo_box{
    position: fixed;
    background-color: #fff;
    border-radius:10rpx;
    z-index: 101;
    top: 0;
    left: 0;
    padding:30rpx 0 30rpx 0;
    width: 80%;
    margin-left: 10%;
    margin-top: 20%;
}
.getInfo_box .title_p{
    text-align: center;
    font-size: 12px;
}
.getInfo_box image{
    width: 100%;
    margin: 20rpx 0 20rpx 0;
}
.but_box{
    width: 90%;
    margin-left: 5%;
}
