<!--pages/memberInfo/modifyAddress/modify.wxml-->
<view>
  <form bindsubmit="formSubmit">
    <view class='schoolInfo'>
      <view class='Info_panl'>
        <view class='cell_box'>
          <view class='label'>姓名</view>
          <view class='value'>
            <input value='大梨' placeholder='请输入姓名' name="" />
          </view>
        </view>
        <view class='cell_box'>
          <view class='label'>手机号码</view>
          <view class='value'>
            <input value='18033441849' placeholder='请输入手机号码' name="" />
          </view>
        </view>
        <view class='cell_box'>
          <view class='label'>所在区域</view>
          <view bindtap='onSelect' class='value'>
            <text>广东省深圳市南山区</text>
            <icon class='iconfont icon-you1'></icon>
          </view>
        </view>
        <view class='cell_box'>
          <view class='label'>详细地址</view>
          <view class='value'>
            <input value='科兴科学园' placeholder='请输入详细地址' name="" />
          </view>
        </view>
      </view>
      <view class='marig-primary'>
        <button size="normal" type="primary" round="ture" form-type='submit' class="primary backg-grad">保存</button>
      </view>
    </view>
  </form>

</view>

<select-area 
  wx:if="{{showArea}}"
  code="{{selectedAreaCode}}"
  bind:onClose="onClose"
  bind:onConfirm="onConfirm">
</select-area>
